@model IEnumerable<MyShop.Core.ViewModels.BasketItemViewModel>

@{
    ViewBag.Title = "Basket";
}

<h2>Basket</h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Line Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="Img" style="height:50px;" src="~/Content/ProductImages/@item.Image" />
            </td>
            <td>
                <a href="@Url.Action("DecreaseItemFromBasket","Basket", new { id = item.Id})"><span class="glyphicon glyphicon-minus"></span></a>
                @Html.DisplayFor(modelItem => item.Quantity)
                <a href="@Url.Action("IncreaseItemFromBasket","Basket", new { id = item.Id})"><span class="glyphicon glyphicon-plus"></span></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @String.Format("{0:C}", item.Price * item.Quantity)
            </td>
            <td>
                <a href="@Url.Action("RemoveFromBasket","Basket", new { id = item.Id})" class="btn btn-danger">Delete</a>
            </td>
        </tr>

    }
    <tr>
        <td colspan="4" style="text-align: right"><strong>Basket Total</strong> </td>
        <td>
            @String.Format("{0:C}", (from p in Model select p.Price * p.Quantity).Sum())
        </td>
        <td></td>
    </tr>

</table>
